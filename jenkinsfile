pipeline {
    agent any
    stages {
        stage('build') {
            agent {
                docker {
                    image 'node:alpine'
                    
                }
            }
            steps {
                sh '''
                    
                    node --version
                    npm --version
                    sudo chown -R 777:777 "/.npm"
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
    }
}